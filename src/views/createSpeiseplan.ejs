<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Speiseplan</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
<h1>Create Speiseplan</h1>

<form action="/create-speiseplan" method="post">
    <label for="weekStart">Woche:</label>
    <input type="text" id="weekStart" name="weekStart" required><br>
    <table border="1">
        <tr>
            <th></th> <!-- Leere Zelle fÃ¼r die Wochentage -->
            <th>Menu1 Fleisch</th>
            <th>Menu2 Vegi</th>
            <th>Menu3 Vegan</th>
            <th>Menu4 Halal</th>
        </tr>
        <% const weekdays = ['Montag', 'Dienstag', 'Mittwoch', 'Donnerstag', 'Freitag']; %>
        <% const weekdaysShort = ['mo', 'di', 'mi', 'do', 'fr']; %>
        <% for (let i = 0; i <= 4; i++) { %>
            <tr>
                <td><%= weekdays[i] %></td>
                <td>
                    <select name="<%= weekdaysShort[i]%>1">
                        <option value="" selected ></option>
                        <% for (const menu of allMenus) { %>
                            <option value="<%= menu.menu_id %>"><%= menu.gericht %></option>
                        <% } %>
                    </select>
                </td>
                <td>
                    <select name="<%= weekdaysShort[i]%>2">
                        <option value="" selected ></option>
                        <% for (const menu of allMenus) { %>
                            <option value="<%= menu.menu_id %>"><%= menu.gericht %></option>
                        <% } %>
                    </select>
                </td>
                <td>
                    <select name="<%= weekdaysShort[i]%>3">
                        <option value="" selected ></option>
                        <% for (const menu of allMenus) { %>
                            <option value="<%= menu.menu_id %>"><%= menu.gericht %></option>
                        <% } %>
                    </select>
                </td>
                <td>
                    <select name="<%= weekdaysShort[i]%>4">
                        <option value="" selected ></option>
                        <% for (const menu of allMenus) { %>
                            <option value="<%= menu.menu_id %>"><%= menu.gericht %></option>
                        <% } %>
                    </select>
                </td>
            </tr>
        <% } %>
    </table>
    <br>
    <button type="submit">Speichern</button>
</form>

<form action="/" method="get">
    <button type="submit">Abbrechen</button>
</form>

</body>
</html>